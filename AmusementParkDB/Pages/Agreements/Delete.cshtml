@page
@model AmusementParkDB.Pages.Agreements.DeleteModel

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Agreement</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Agreement Type</dt>
        <dd class="col-sm-10">@(Model.Agreement.Type ?? "-")</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@(Model.Agreement.Date.ToString("yyyy-MM-dd") ?? "-")</dd>

        <dt class="col-sm-2">User ID</dt>
        <dd class="col-sm-10">@(Model.Agreement.IdUsersNavigation?.Id.ToString() ?? "-")</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Agreement.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />  |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
