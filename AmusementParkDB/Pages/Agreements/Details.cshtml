@page
@model AmusementParkDB.Pages.Agreements.DetailsModel

<div>
    <h4>Agreement</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Agreement Type</dt>
        <dd class="col-sm-10">@(Model.Agreement.Type ?? "-")</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@(Model.Agreement.Date.ToString("yyyy-MM-dd") ?? "-")</dd>

        <dt class="col-sm-2">User ID</dt>
        <dd class="col-sm-10">@(Model.Agreement.IdUsersNavigation?.Id.ToString() ?? "-")</dd>
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Agreement.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
