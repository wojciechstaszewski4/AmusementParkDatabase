@page
@model AmusementParkDB.Pages.AttractionCategories.DeleteModel

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Attraction Category</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Attraction Category Name</dt>
        <dd class="col-sm-10">@(Model.AttractionCategory.Name ?? "-")</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@(Model.AttractionCategory.Description ?? "-")</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="AttractionCategory.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />  |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
