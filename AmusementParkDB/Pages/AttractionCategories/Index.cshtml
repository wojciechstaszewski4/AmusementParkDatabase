@page
@model AmusementParkDB.Pages.AttractionCategories.IndexModel

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>

<form method="post" asp-page-handler="DeleteAll">
    <input type="submit" value="Delete All Records" class="btn deleteAll btn-danger"
        onclick="return confirm('Are you sure you want to delete all attraction categories?');" />
</form>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Attraction Category Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.AttractionCategory != null && Model.AttractionCategory.Any())
        {
            @foreach (var item in Model.AttractionCategory)
            {
                <tr>
                    <td>@(item.Name ?? "-")</td>
                    <td>@(item.Description ?? "-")</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center">No Attraction Categories Available.</td>
            </tr>
        }
    </tbody>
</table>
