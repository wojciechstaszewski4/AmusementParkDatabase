@page
@model AmusementParkDB.Pages.Attractions.IndexModel

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>

<form method="post" asp-page-handler="DeleteAll">
    <input type="submit" value="Delete All Records" class="btn deleteAll btn-danger"
        onclick="return confirm('Are you sure you want to delete all attractions?');" />
</form>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Attraction Name</th>
            <th>Description</th>
            <th>Type</th>
            <th>Capacity</th>
            <th>Status</th>
            <th>Open Date</th>
            <th>Close Date</th>
            <th>Maintenance Date</th>
            <th>Ticket Price</th>
            <th>Available Slots</th>
            <th>Occupied Slots</th>
            <th>Age Restriction</th>
            <th>Supervisor</th>
            <th>Location</th>
            <th>Attraction Category ID</th>
            <th>Employee ID</th>
            <th>Event ID</th>
            <th>User ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Attraction != null && Model.Attraction.Any())
        {
            @foreach (var item in Model.Attraction)
            {
                <tr>
                    <td>@(item.Name ?? "-")</td>
                    <td>@(item.Description ?? "-")</td>
                    <td>@(item.Type ?? "-")</td>
                    <td>@(item.Capacity?.ToString() ?? "-")</td>
                    <td>@(item.Status ?? "-")</td>
                    <td>@(item.OpeningDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                    <td>@(item.ClosingDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                    <td>@(item.MaintenanceDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                    <td>@(item.TicketPrice?.ToString("C") ?? "-")</td>
                    <td>@(item.AvailableSlots?.ToString() ?? "-")</td>
                    <td>@(item.OccupiedSlots?.ToString() ?? "-")</td>
                    <td>@(item.AgeRestriction?.ToString() ?? "-")</td>
                    <td>@(item.Supervisor ?? "-")</td>
                    <td>@(item.Location ?? "-")</td>
                    <td>@(item.IdAttractionCategoriesNavigation?.Id.ToString() ?? "-")</td>
                    <td>@(item.IdEmployeesNavigation?.Id.ToString() ?? "-")</td>
                    <td>@(item.IdEventsNavigation?.Id.ToString() ?? "-")</td>
                    <td>@(item.IdUsersNavigation?.Id.ToString() ?? "-")</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="19" class="text-center">No Attractions Available.</td>
            </tr>
        }
    </tbody>
</table>
