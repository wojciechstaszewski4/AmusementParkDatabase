@page
@model AmusementParkDB.Pages.Coupons.DeleteModel

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Coupon</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Coupon Code</dt>
        <dd class="col-sm-10">@(Model.Coupon.Code ?? "-")</dd>

        <dt class="col-sm-2">Expiry Date</dt>
        <dd class="col-sm-10">@(Model.Coupon.ExpiryDate?.ToString("yyyy-MM-dd") ?? "-")</dd>

        <dt class="col-sm-2">Discount Percentage (%)</dt>
        <dd class="col-sm-10">@(Model.Coupon.DiscountPercentage?.ToString("0.00") + " %" ?? "-")</dd>

        <dt class="col-sm-2">Discount Amount</dt>
        <dd class="col-sm-10">@(Model.Coupon.DiscountAmount?.ToString("C") ?? "-")</dd>

        <dt class="col-sm-2">Single Use</dt>
        <dd class="col-sm-10">@(Model.Coupon.SingleUse ?? "-")</dd>

        <dt class="col-sm-2">Multiple Uses</dt>
        <dd class="col-sm-10">@(Model.Coupon.MultipleUses.ToString() ?? "-")</dd>

        <dt class="col-sm-2">Applicable Attractions</dt>
        <dd class="col-sm-10">@(Model.Coupon.ApplicableAttractions ?? "-")</dd>

        <dt class="col-sm-2">Applicable Events</dt>
        <dd class="col-sm-10">@(Model.Coupon.ApplicableEvents ?? "-")</dd>

        <dt class="col-sm-2">Store ID</dt>
        <dd class="col-sm-10">@(Model.Coupon.IdStoresNavigation?.Id.ToString() ?? "-")</dd>

        <dt class="col-sm-2">User ID</dt>
        <dd class="col-sm-10">@(Model.Coupon.IdUsersNavigation?.Id.ToString() ?? "-")</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Coupon.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
