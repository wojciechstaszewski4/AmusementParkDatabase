@page
@model AmusementParkDB.Pages.Departments.EditModel

<h4>Edit Department</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Department.Id" />

            <div class="form-group">
                <label asp-for="Department.Name" class="control-label">Department Name</label>
                <input asp-for="Department.Name" class="form-control" />
                <span asp-validation-for="Department.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Department.Description" class="control-label">Description</label>
                <textarea asp-for="Department.Description" class="form-control"></textarea>
                <span asp-validation-for="Department.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
