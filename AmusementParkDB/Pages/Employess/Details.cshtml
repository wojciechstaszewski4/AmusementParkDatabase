@page
@model AmusementParkDB.Pages.Employess.DetailsModel

<div>
    <h4>Employee</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Job Title</dt>
        <dd class="col-sm-10">@(Model.Employee.JobTitle ?? "-")</dd>

        <dt class="col-sm-2">Salary</dt>
        <dd class="col-sm-10">@(Model.Employee.Salary.ToString("C") ?? "-")</dd>

        <dt class="col-sm-2">Employment Date</dt>
        <dd class="col-sm-10">@(Model.Employee.EmploymentDate.ToString("yyyy-MM-dd") ?? "-")</dd>

        <dt class="col-sm-2">Termination Date</dt>
        <dd class="col-sm-10">@(Model.Employee.TerminationDate?.ToString("yyyy-MM-dd") ?? "-")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@(Model.Employee.Status ?? "-")</dd>

        <dt class="col-sm-2">Emergency Contact</dt>
        <dd class="col-sm-10">@(Model.Employee.EmergencyContact ?? "-")</dd>

        <dt class="col-sm-2">Rating</dt>
        <dd class="col-sm-10">@(Model.Employee.Rating?.ToString("0.0") ?? "-")</dd>

        <dt class="col-sm-2">Comment</dt>
        <dd class="col-sm-10">@(Model.Employee.Comment ?? "-")</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@(Model.Employee.Date.ToString("yyyy-MM-dd HH:mm:ss") ?? "-")</dd>

        <dt class="col-sm-2">Department ID</dt>
        <dd class="col-sm-10">@(Model.Employee.IdDepartmentsNavigation?.Id.ToString() ?? "-")</dd>

        <dt class="col-sm-2">User ID</dt>
        <dd class="col-sm-10">@(Model.Employee.IdUsersNavigation?.Id.ToString() ?? "-")</dd>
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Employee.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
