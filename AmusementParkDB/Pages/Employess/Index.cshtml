@page
@model AmusementParkDB.Pages.Employess.IndexModel

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>

<form method="post" asp-page-handler="DeleteAll">
    <input type="submit" value="Delete All Records" class="btn deleteAll btn-danger"
        onclick="return confirm('Are you sure you want to delete all employees?');" />
</form>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Job Title</th>
            <th>Salary</th>
            <th>Employment Date</th>
            <th>Termination Date</th>
            <th>Status</th>
            <th>Emergency Contact</th>
            <th>Rating</th>
            <th>Comment</th>
            <th>Date</th>
            <th>Department ID</th>
            <th>User ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Employee != null && Model.Employee.Any())
        {
            @foreach (var item in Model.Employee)
            {
                <tr>
                    <td>@(item.JobTitle ?? "-")</td>
                    <td>@(item.Salary.ToString("C") ?? "-")</td>
                    <td>@(item.EmploymentDate.ToString("yyyy-MM-dd") ?? "-")</td>
                    <td>@(item.TerminationDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                    <td>@(item.Status ?? "-")</td>
                    <td>@(item.EmergencyContact ?? "-")</td>
                    <td>@(item.Rating?.ToString("F1") ?? "-")</td>
                    <td>@(item.Comment ?? "-")</td>
                    <td>@(item.Date.ToString("yyyy-MM-dd HH:mm:ss") ?? "-")</td>
                    <td>@(item.IdDepartmentsNavigation?.Id.ToString() ?? "-")</td>
                    <td>@(item.IdUsersNavigation?.Id.ToString() ?? "-")</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="12" class="text-center">No Employees Found.</td>
            </tr>
        }
    </tbody>
</table>
