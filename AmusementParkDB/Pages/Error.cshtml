@page
@model AmusementParkDB.Pages.ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 text-danger">Oops! Something went wrong.</h1>
        <p class="lead text-muted">We're sorry, but there was an error processing your request. Please try again later.
        </p>

        @if (Model.ShowRequestId)
        {
            <div class="alert alert-warning">
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </div>
        }

        <a asp-page="/Index" class="btn btn-primary">Return to Home Page</a>
    </div>
</div>
