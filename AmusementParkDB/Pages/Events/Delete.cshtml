@page
@model AmusementParkDB.Pages.Events.DeleteModel

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Event</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Event Name</dt>
        <dd class="col-sm-10">@(Model.Event.Name ?? "-")</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@(Model.Event.Description ?? "-")</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@(Model.Event.StartDate.ToString("yyyy-MM-dd") ?? "-")</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@(Model.Event.EndDate.ToString("yyyy-MM-dd") ?? "-")</dd>

        <dt class="col-sm-2">Ticket Price</dt>
        <dd class="col-sm-10">@(Model.Event.TicketPrice?.ToString("C") ?? "-")</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Event.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
