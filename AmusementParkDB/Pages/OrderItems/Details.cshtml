@page
@model AmusementParkDB.Pages.OrderItems.DetailsModel

<div>
    <h4>Order Item</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Order ID</dt>
        <dd class="col-sm-10">@(Model.OrderItem.IdOrdersNavigation?.Id.ToString() ?? "-")</dd>

        <dt class="col-sm-2">Attraction ID</dt>
        <dd class="col-sm-10">@(Model.OrderItem.IdAttractionsNavigation?.Id.ToString() ?? "-")</dd>

        <dt class="col-sm-2">Event ID</dt>
        <dd class="col-sm-10">@(Model.OrderItem.IdEventsNavigation?.Id.ToString() ?? "-")</dd>

        <dt class="col-sm-2">Product ID</dt>
        <dd class="col-sm-10">@(Model.OrderItem.IdProductsNavigation?.Id.ToString() ?? "-")</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@(Model.OrderItem.Quantity.ToString() ?? "-")</dd>

        <dt class="col-sm-2">Unit Price</dt>
        <dd class="col-sm-10">@(Model.OrderItem.UnitPrice.ToString("C") ?? "-")</dd>
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.OrderItem.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
