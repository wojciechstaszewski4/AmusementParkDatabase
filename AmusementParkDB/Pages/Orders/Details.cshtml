@page
@model AmusementParkDB.Pages.Orders.DetailsModel

<div>
    <h4>Order</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@(Model.Order.OrderDate.ToString("yyyy-MM-dd HH:mm") ?? "-")</dd>

        <dt class="col-sm-2">Total Price</dt>
        <dd class="col-sm-10">@(Model.Order.TotalPrice.ToString("C") ?? "-")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@(Model.Order.Status ?? "-")</dd>

        <dt class="col-sm-2">User ID</dt>
        <dd class="col-sm-10">@(Model.Order.IdUsersNavigation?.Id.ToString() ?? "-")</dd>
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Order.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
