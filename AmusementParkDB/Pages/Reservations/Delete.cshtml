@page
@model AmusementParkDB.Pages.Reservations.DeleteModel

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Reservation</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Reservation Date</dt>
        <dd class="col-sm-10">@(Model.Reservation.ReservationDate.ToString("yyyy-MM-dd") ?? "-")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@(Model.Reservation.Status ?? "-")</dd>

        <dt class="col-sm-2">Total Cost</dt>
        <dd class="col-sm-10">@(Model.Reservation.TotalCost.ToString("C") ?? "-")</dd>

        <dt class="col-sm-2">Number of People</dt>
        <dd class="col-sm-10">@(Model.Reservation.NumberOfPeople.ToString() ?? "-")</dd>

        <dt class="col-sm-2">Special Request</dt>
        <dd class="col-sm-10">@(Model.Reservation.SpecialRequest ?? "-")</dd>

        <dt class="col-sm-2">Reservation Code</dt>
        <dd class="col-sm-10">@(Model.Reservation.ReservationCode ?? "-")</dd>

        <dt class="col-sm-2">Attraction ID</dt>
        <dd class="col-sm-10">@(Model.Reservation.IdAttractionsNavigation?.Id.ToString() ?? "-")</dd>

        <dt class="col-sm-2">Event ID</dt>
        <dd class="col-sm-10">@(Model.Reservation.IdEventsNavigation?.Id.ToString() ?? "-")</dd>

        <dt class="col-sm-2">User ID</dt>
        <dd class="col-sm-10">@(Model.Reservation.IdUsersNavigation?.Id.ToString() ?? "-")</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Reservation.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
