@page
@model AmusementParkDB.Pages.Reviews.DeleteModel

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Review</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Rating</dt>
        <dd class="col-sm-10">@(Model.Review.Rating?.ToString() ?? "-")</dd>

        <dt class="col-sm-2">Comment</dt>
        <dd class="col-sm-10">@(Model.Review.Comment ?? "-")</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@(Model.Review.Date.ToString("yyyy-MM-dd HH:mm:ss") ?? "-")</dd>

        <dt class="col-sm-2">User Rating</dt>
        <dd class="col-sm-10">@(Model.Review.UserRating?.ToString("0.0") ?? "-")</dd>

        <dt class="col-sm-2">Staff Rating</dt>
        <dd class="col-sm-10">@(Model.Review.StaffRating?.ToString("0.0") ?? "-")</dd>

        <dt class="col-sm-2">Cleanliness Rating</dt>
        <dd class="col-sm-10">@(Model.Review.CleanlinessRating?.ToString("0.0") ?? "-")</dd>

        <dt class="col-sm-2">Attraction ID</dt>
        <dd class="col-sm-10">@(Model.Review.IdAttractionsNavigation?.Id.ToString() ?? "-")</dd>

        <dt class="col-sm-2">Employee ID</dt>
        <dd class="col-sm-10">@(Model.Review.IdEmployeesNavigation?.Id.ToString() ?? "-")</dd>

        <dt class="col-sm-2">Product ID</dt>
        <dd class="col-sm-10">@(Model.Review.IdProductsNavigation?.Id.ToString() ?? "-")</dd>

        <dt class="col-sm-2">Store ID</dt>
        <dd class="col-sm-10">@(Model.Review.IdStoresNavigation?.Id.ToString() ?? "-")</dd>

        <dt class="col-sm-2">User ID</dt>
        <dd class="col-sm-10">@(Model.Review.IdUsersNavigation?.Id.ToString() ?? "-")</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Review.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
