@page
@model AmusementParkDB.Pages.Reviews.IndexModel

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>

<form method="post" asp-page-handler="DeleteAll">
    <input type="submit" value="Delete All Records" class="btn deleteAll btn-danger"
        onclick="return confirm('Are you sure you want to delete all reviews?');" />
</form>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Rating</th>
            <th>Comment</th>
            <th>Date</th>
            <th>User Rating</th>
            <th>Staff Rating</th>
            <th>Cleanliness Rating</th>
            <th>Attraction</th>
            <th>Employee ID</th>
            <th>Product ID</th>
            <th>Store ID</th>
            <th>User ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Review != null && Model.Review.Any())
        {
            @foreach (var item in Model.Review)
            {
                <tr>
                    <td>@(item.Rating?.ToString("0.0") ?? "-")</td>
                    <td>@(item.Comment ?? "-")</td>
                    <td>@(item.Date.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                    <td>@(item.UserRating?.ToString("0.0") ?? "-")</td>
                    <td>@(item.StaffRating?.ToString("0.0") ?? "-")</td>
                    <td>@(item.CleanlinessRating?.ToString("0.0") ?? "-")</td>
                    <td>@(item.IdAttractionsNavigation?.Id.ToString() ?? "-")</td>
                    <td>@(item.IdEmployeesNavigation?.Id.ToString() ?? "-")</td>
                    <td>@(item.IdProductsNavigation?.Id.ToString() ?? "-")</td>
                    <td>@(item.IdStoresNavigation?.Id.ToString() ?? "-")</td>
                    <td>@(item.IdUsersNavigation?.Id.ToString() ?? "-")</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="12" class="text-center">No Reviews Found.</td>
            </tr>
        }
    </tbody>
</table>
