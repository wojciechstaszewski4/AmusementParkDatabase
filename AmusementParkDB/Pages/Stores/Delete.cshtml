@page
@model AmusementParkDB.Pages.Stores.DeleteModel

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Store</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Store Name</dt>
        <dd class="col-sm-10">@(Model.Store.Name ?? "-")</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@(Model.Store.Location ?? "-")</dd>

        <dt class="col-sm-2">Opening Hours</dt>
        <dd class="col-sm-10">@(Model.Store.OpeningHours ?? "-")</dd>

        <dt class="col-sm-2">Contact Information</dt>
        <dd class="col-sm-10">@(Model.Store.ContactInformation ?? "-")</dd>

        <dt class="col-sm-2">Supervisor</dt>
        <dd class="col-sm-10">@(Model.Store.Supervisor ?? "-")</dd>

        <dt class="col-sm-2">Rating</dt>
        <dd class="col-sm-10">@(Model.Store.Rating?.ToString("0.0") ?? "-")</dd>

        <dt class="col-sm-2">Employee ID</dt>
        <dd class="col-sm-10">@(Model.Store.IdEmployeesNavigation?.Id.ToString() ?? "-")</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Store.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
